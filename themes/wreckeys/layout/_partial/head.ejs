<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<meta name="viewport" content="width=device-width, initial-scale=1.0" >
<meta name="robots" content="noodp,noydir">
<%
var title = page.title ? `${page.title} - ${config.title}` : config.title;
%>
<title><%= title %></title>
<% if (page.description) { %>
  <meta name="description" content="<%= page.description %>">
<% } %>

<% if (page.keywords) { %>
  <meta name="keywords" content="<%= page.keywords %>">
<% } else if (theme.keywords) { %>
  <meta name="keywords" content="<%= theme.keywords %>">
<% } %>

<link rel="mask-icon" href="/images/clevernode-box.svg" color="#151515">
<link rel="icon" type="image/png" href="/images/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="/assets/images/favicon-16x16.png" sizes="16x16">
<meta name="theme-color" content="#ffffff">

<meta property="og:title" content="<%= title %>"/>
<% if (page.description) { %>
  <meta property="og:description" content="<%= page.description %>" />
<% } %>
<meta property="og:url" content="<%= config.url %>/<%= page.canonical_path.replace('index.md', '') %>"/>
<meta property="og:site_name" content="<%= config.title %>"/>
<meta property="og:locale" content="<%= page.language || config.language %>"/>
<meta property="og:type" content="website"/>
<meta property="og:image" content="/images/og_clevernode_poster.jpg"/>

<%- css('css/style.css') %>
<% if (theme.favicon) { %>
  <link rel="shortcut icon" type="image/x-icon" href="<%= url_for(theme.favicon) %>">
<% } %>
<% /*Canonical, good for google search engine (SEO) : https://support.google.com/webmasters/answer/139066*/ %>
<% if (theme.canonical) { %>
  <link rel="canonical" href="<%= config.url %>/<%= page.canonical_path.replace('index.md', '') %>"/>
<% } %>
