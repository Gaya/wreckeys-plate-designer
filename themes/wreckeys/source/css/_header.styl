nav {
  padding: 2em 0;

  ul {
    display: flex;
    justify-content: space-around;

    a {
      text-decoration: none;
      color: var(--text);
      margin: 0.1em 0.4em;

      &:hover, &:active, &:focus {
        padding: 0.1em 0.4em;
        margin: 0;
      }
    }

    li:last-child {
      display: none;
    }

    @media only screen and (min-width: 600px) {
      li:last-child {
        display: block;
      }
    }
  }
}

header {
  display: flex;
  align-items: center;
  flex-direction: column;

  .header-home {
    background: none;
    margin: 0;
    padding: 0;
    font-size: 1em;
  }

  picture {
    margin: 1em 0 4em;
    display: flex;
    justify-content: center;
  }

  a {
    display: block;

    &:hover, &:active, &:focus {
      background: none;
    }

    img {
      width: 300px;
      margin: 1em 0;
    }
  }

  p {
    font-size: 1.2em;
    line-height: 1.7em;
    margin: 2em auto;
    max-width: 15em;
  }
}
