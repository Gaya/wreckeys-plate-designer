nav {
  margin: 2em 0;
}

nav ul {
  display: flex;
  justify-content: space-around;
}

nav ul a {
  text-decoration: none;
  color: var(--text);

  &:hover, &:active {
    text-decoration: underline;
  }
}

header {
  display: flex;
  align-items: center;
  flex-direction: column;
}

header img {
  width: 300px;
  margin: 1em 0;
}

header p {
  font-size: 1.2em;
  line-height: 1.7em;
  margin: 2em auto;
  max-width: 15em;
}
