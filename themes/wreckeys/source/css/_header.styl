nav {
  padding: 2em 0;

  ul {
    display: flex;
    justify-content: space-around;

    a {
      text-decoration: none;
      color: var(--text);

      &:hover, &:active {
        text-decoration: underline;
      }
    }
  }
}

header {
  display: flex;
  align-items: center;
  flex-direction: column;

  picture {
    margin: 1em 0 4em;
    display: flex;
    justify-content: center;
  }

  a img {
    width: 300px;
    margin: 1em 0;
  }

  p {
    font-size: 1.2em;
    line-height: 1.7em;
    margin: 2em auto;
    max-width: 15em;
  }
}
