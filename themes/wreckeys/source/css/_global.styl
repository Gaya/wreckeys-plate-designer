:root {
  --main: #c03319;
  --secondary: #a4c5ab;
  --bg: #ffffff;
  --text: #000100;
}

@font-face {
  font-family: 'JetBrains Mono';
  font-style: normal;
  font-weight: 600;
  font-display: swap;
  src: url(../fonts/JetBrainsMono-SemiBold.woff) format('woff');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

html {
  scroll-behavior: smooth;

  @media only screen and (min-width: 600px) {
    font-size: 22px;
  }
}

html, body {
  background: var(--bg);
  min-height: 100%;
}

body {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

html, body, input, textarea, button {
  color: var(--text);
  font-family: "JetBrains Mono", monospace;
  line-height: 1.4em;
}

h1 {
  font-size: 2em;
  line-height: 1.3em;
}

h2 {
  font-size: 1.5em;
  line-height: 1.3em;
}

h1, h2 {
  background: var(--text);
  color: var(--bg);
  box-decoration-break: clone;
  -webkit-box-decoration-break: clone;
  padding: 0.1em 0.3em;
  margin-left: -0.3em;
  margin-right: -0.3em;
  display: inline;
}

input, textarea, button {
  font-size: 1em;
}

button {
  background-color: var(--main);
  border-radius: 6px;
  color: var(--bg);
  padding: 10px 21px;
  text-transform: uppercase;
  border: 2px solid var(--main);

  &:hover, &:active, &:focus {
    outline: none;
    background-color: transparent;
    color: var(--main);
    border-color: var(--main);
    cursor: pointer;
  }
}

body::before {
  content: "";
  background: var(--main);
  display: block;
  height: 6px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

a {
  color: var(--main);

  &:hover, &:active, &:focus {
    background: var(--text);
    color: var(--bg);
    box-decoration-break: clone;
    padding: 0;
    text-decoration: none;
  }
}

img {
  display: block;
}

main {
  flex-grow: 1;
}

p {
 margin: 2em 0;
}

.container {
  max-width: 800px;
  padding: 0 1em;
  margin: 0 auto;
}

.separator {
  margin-top: 1em;
  border-top: 3px solid var(--main);
  padding-top: 3em;
  padding-bottom: 1em;
}

footer {
  padding: 1em;
  background: var(--main);
  color: var(--bg);
  font-size: 0.8em;
  margin-top: 3em;
}
